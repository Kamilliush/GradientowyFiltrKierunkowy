<Window x:Class="JAApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JAApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1500">

    <Grid AllowDrop="True"
          Drop="ImageDrop"
          DragEnter="ImageDragEnter">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="SegmentsTextBlock"
                   TextWrapping="Wrap"
                   Margin="10"
                   Foreground="Blue"
                   Grid.Column="1"
                   Grid.Row="5"/>

        <TextBlock x:Name="ExecutionTimeTextBlock"
                   TextWrapping="Wrap"
                   Margin="10"
                   Foreground="Green"
                   FontSize="16"
                   Grid.Column="5"
                   Grid.Row="5"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Text="Czas: "/>

        <Border Grid.Column="1" 
                Grid.Row="1" 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="LightGray"
                AllowDrop="True"
                Drop="ImageDrop"
                DragEnter="ImageDragEnter">
            <Image x:Name="image"
                   Stretch="Uniform"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"/>
        </Border>

        <Border Grid.Column="3" 
                Grid.Row="1" 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="Gray">
            <Image x:Name="imageAfter"
                   Stretch="Uniform"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"/>
        </Border>

        <!-- Histogram dla obrazu przed -->
        <Border Grid.Column="1"
                Grid.Row="3"
                Grid.RowSpan="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="Black">
            <Canvas x:Name="HistogramBefore"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="10"/>
        </Border>

        <!-- Histogram dla obrazu po -->
        <Border Grid.Column="3"
                Grid.Row="3"
                Grid.RowSpan="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="Black">
            <Canvas x:Name="HistogramAfter"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="10"/>
        </Border>

        <Grid Grid.Column="5"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="29*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="29*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="1"
                    Grid.Row="0"
                    Content="Start"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Click="Click"
                    FontSize="20" />

            <StackPanel Grid.Column="1"
                        Grid.Row="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                <RadioButton x:Name="CPP"
                             Content="CPP"
                             GroupName="Opcje" />
                <RadioButton x:Name="ASM"
                             Content="ASM"
                             GroupName="Opcje" />
            </StackPanel>

            <ComboBox x:Name="threadsNum"
                      Grid.Column="3"
                      Grid.Row="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Width="150"
                      SelectedIndex="0">
                <ComboBoxItem Content="1" />
                <ComboBoxItem Content="12" />
                <ComboBoxItem Content="128" />
            </ComboBox>
        </Grid>
    </Grid>
</Window>
