<Window x:Class="JAApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="900" Width="1500"
        Background="#FFEFEFEF">

    <!-- Zasoby okna: Style podstawowych kontrolek -->
    <Window.Resources>
        <!-- Styl dla przycisków -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF607D8B"/>
            <Setter Property="BorderBrush" Value="#FF37474F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Styl dla suwaka -->
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="250"/>
        </Style>

        <!-- Styl dla TextBlocków -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Styl dla obramowań (Border) -->
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFA0A0A0"/>
        </Style>
    </Window.Resources>

    <Grid AllowDrop="True"
          Drop="ImageDrop"
          DragEnter="ImageDragEnter">

        <!-- Definicja kolumn głównej siatki -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Definicja wierszy głównej siatki -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Panel z listą segmentów (prawy dolny) -->
        <ScrollViewer Grid.Column="1" Grid.Row="5"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <TextBlock x:Name="SegmentsTextBlock"
                       TextWrapping="Wrap"
                       Margin="10"
                       Foreground="Blue" />
        </ScrollViewer>

        <!-- Tekst z czasem wykonania (prawy dolny) -->
        <TextBlock x:Name="ExecutionTimeTextBlock"
                   TextWrapping="Wrap"
                   Margin="10"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="Green"
                   Grid.Column="5"
                   Grid.Row="5"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Text="Czas: "/>

        <!-- Obraz przed przetwarzaniem -->
        <Border Grid.Column="1" 
                Grid.Row="1" 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="LightGray"
                AllowDrop="True"
                Drop="ImageDrop"
                DragEnter="ImageDragEnter">
            <Image x:Name="image"
                   Stretch="Uniform"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"/>
        </Border>

        <!-- Obraz po przetwarzaniu -->
        <Border Grid.Column="3" 
                Grid.Row="1" 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Background="White">
            <Image x:Name="imageAfter"
                   Stretch="Uniform"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"/>
        </Border>

        <!-- Histogram dla obrazu przed -->
        <Border Grid.Column="1"
                Grid.Row="3"
                Background="#FF222222">
            <Canvas x:Name="HistogramBefore"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="10"/>
        </Border>

        <!-- Histogram dla obrazu po -->
        <Border Grid.Column="3"
                Grid.Row="3"
                Background="#FF222222">
            <Canvas x:Name="HistogramAfter"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="10"/>
        </Border>

        <!-- Panel kontrolny (kolumna 5, wiersz 1) -->
        <Border Grid.Column="5"
                Grid.Row="1"
                Background="#FFF5F5F5"
                Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Przycisk "Wybierz zdjęcie" -->
                <Button Grid.Row="0"
                        Content="Wybierz zdjęcie"
                        Click="WybierzZdjecie_Click"/>

                <!-- Kontener dla suwaka i opisu wątków -->
                <StackPanel Grid.Row="1" 
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            Margin="10">
                    <TextBlock Text="{Binding ElementName=threadsSlider, Path=Value, StringFormat='Liczba wątków: {0}'}"
                               FontWeight="Bold"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <Slider x:Name="threadsSlider"
                            Minimum="1"
                            Maximum="128"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            IsSnapToTickEnabled="True"
                            AutoToolTipPlacement="TopLeft"
                            AutoToolTipPrecision="0"/>
                </StackPanel>

                <!-- Panel przycisków CPP/ASM -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="10">
                    <Button Content="CPP"
                            Click="CPP_Click"
                            Width="100"
                            Height="40"/>

                    <Button Content="ASM"
                            Click="ASM_Click"
                            Width="100"
                            Margin="10,0,0,0"
                            Height="40"/>
                </StackPanel>

                <!-- Przycisk "Zapisz" -->
                <Button x:Name="saveButton"
                        Grid.Row="3"
                        Content="Zapisz"
                        Click="Zapisz_Click"
                        IsEnabled="False"
                        Width="120"
                        HorizontalAlignment="Center"
                        Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
